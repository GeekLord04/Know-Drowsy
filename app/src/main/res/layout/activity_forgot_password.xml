<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".authentication.ForgotPassword">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="14dp"
            >
            <ImageView
                android:id="@+id/loginIllustration"
                android:layout_width="match_parent"
                android:layout_height="231dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="80dp"
                app:srcCompat="@drawable/forgotpassword_illustration" />

            <TextView
                android:id="@+id/signUpHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans_bold"
                android:text="Forgot Password"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:layout_marginTop="10dp"
               />

            <TextView
                android:id="@+id/signUph2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/dm_sans"
                android:text="Enter your registered email"
                android:textColor="@color/black"
                android:textSize="18sp"
                 />
            <EditText
                android:id="@+id/editTextTextEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/textbox"
                android:drawablePadding="7dp"
                android:ems="10"
                android:fontFamily="@font/dm_sans"
                android:hint="Enter our Email ID"
                android:inputType="textEmailAddress"
                android:paddingStart="15dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/black"
                android:textColorHint="#A6A6A6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                tools:ignore="RtlSymmetry" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/send"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/primary_button"
                android:text="Forgot Password"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/editTextTextEmailAddress"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/editTextTextEmailAddress"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress"
                app:layout_constraintVertical_bias="0.148" />



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>