<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".authentication.SignIn_Activity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="14dp"
        >
        <ImageView
            android:id="@+id/loginIllustration"
            android:layout_width="match_parent"
            android:layout_height="231dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="80dp"
            app:srcCompat="@drawable/signin_illustration" />

        <TextView
            android:id="@+id/signUpHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_bold"
            android:text="Sign In"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="35sp"
          />

        <TextView
            android:id="@+id/signUph2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/dm_sans"
            android:text="Log in to your account"
            android:textColor="@color/black"
            android:textSize="18sp"
             />
        <EditText
            android:id="@+id/SignIn_Email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/textbox"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/dm_sans"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            />

        <EditText
            android:id="@+id/SignIn_Password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/textbox"
            android:ems="10"
            android:fontFamily="@font/dm_sans"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
             />
        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/dm_sans_bold"
            android:text="Forgot password?"
            android:textColor="@color/blue"
            android:layout_gravity="end"
            android:textSize="15dp" />

        <Button
            android:id="@+id/loginButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/primary_button"
            android:text="Log in"
            android:textAllCaps="false"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
           >

            <TextView
                android:id="@+id/sign_in_suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans"
                android:text="Don't have an account?"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="131dp"
                tools:layout_editor_absoluteY="680dp" />

            <TextView
                android:id="@+id/createNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="Create"
                android:textColor="@color/blue"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="266dp"
                tools:layout_editor_absoluteY="676dp" />
        </LinearLayout>


    </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>