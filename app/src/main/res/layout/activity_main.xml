<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:fontFamily="@font/dm_sans_bold"
                android:paddingTop="8dp"
                android:text="Hello User"
                android:textColor="@color/black"
                android:textSize="27dp" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/profile_img"
                android:layout_width="250dp"
                android:layout_height="190dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLayout1">

            <EditText
                android:id="@+id/date"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/dm_sans_medium"
                android:inputType="time"
                android:text="Date"
                android:textSize="19dp" />

            <EditText
                android:id="@+id/time"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/dm_sans_medium"
                android:inputType="date"
                android:text="Time"
                android:textSize="19dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/location"
                    android:layout_width="105dp"
                    android:layout_height="31dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/dm_sans_medium"
                    android:gravity="center"
                    android:text="Location:"
                    android:textSize="19dp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/location_btn"
                    app:layout_constraintHorizontal_bias="0.45"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.507" />


                <TextView
                    android:id="@+id/location_text"
                    android:layout_width="196dp"
                    android:layout_height="73dp"
                    android:layout_marginEnd="32dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="19dp"
                    android:fontFamily="@font/dm_sans_medium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.592" />
                <Button
                    android:id="@+id/location_btn"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="171dp"
                    android:layout_height="49dp"
                    android:layout_marginEnd="44dp"
                    android:layout_weight="1"
                    android:background="@drawable/permission_button"
                    android:text="Enable Permission"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="19dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.509" />


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/camera"
                    android:layout_width="105dp"
                    android:layout_height="31dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/dm_sans_medium"
                    android:gravity="center"
                    android:text="Camera:"
                    android:textSize="19dp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/camera_btn"
                    app:layout_constraintHorizontal_bias="0.45"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.507" />


                <TextView
                    android:id="@+id/camera_text"
                    android:layout_width="196dp"
                    android:layout_height="73dp"
                    android:layout_marginEnd="32dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="19dp"
                    android:fontFamily="@font/dm_sans_medium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.592" />
                <Button
                    android:id="@+id/camera_btn"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="171dp"
                    android:layout_height="49dp"
                    android:layout_marginEnd="44dp"
                    android:layout_weight="1"
                    android:background="@drawable/permission_button"
                    android:text="Enable Permission"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="19dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.509" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="229dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please swipe to start your camera and monitor yourself."
            android:textSize="19dp"
            android:textColor="@color/black"
            android:layout_margin="20dp"/>
        <com.ncorti.slidetoact.SlideToActView
            android:id="@+id/slider"
            android:layout_width="340dp"
            android:layout_height="match_parent"
            app:text="Slide to start"
            app:text_size="24dp"
            android:layout_gravity="center"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>